@using Blog.Proj.Model


@{
    ViewData["Title"] = "Home Page";
}

@model PostModel



<div class="row">
    <div class="col-2 mx-5">

        <h5 class="text-dark m-5 d-flex justify-content-justify-content-center align-items-center">Categories</h5>
        <hr />
        <div>

            @foreach (var category in Model.Categories)
            {
                @await Html.PartialAsync("_Category",category)

            }
        </div>

    </div>
    <div class="col-9  d-flex justify-content-end align-items-center">




      
        <div>
            
             <h5 class="text-dark m-5 d-flex justify-content-justify-content-center align-items-center">All Posts</h5>

        <div class="py-5">

            @foreach (var post in Model.Posts)
            {
                @await Html.PartialAsync("_Posts",post)

            }
        </div>

        </div>

    </div>

</div>
